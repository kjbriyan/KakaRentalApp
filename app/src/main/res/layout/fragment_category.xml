<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/barAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center"
                    android:text="KATEGORI"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/barAtas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            //PERLENGKAPAN

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/raleway_medium"
                android:text="Perlengkapan Bayi"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_topbottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Baby Box / Boks Bayi"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Baby Swing / Ayunan Bayi"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Baby Walker"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Bouncer / Ayunan Bayi (Manual)"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Car Seat"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="High Chair / Kursi Makan"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Push Walker / Dorongan"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Stroller / Kereta Dorong"
                android:textSize="17sp" />



            //MAINAN

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway_medium"
                android:text="Mainan Anak"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_topbottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Musikal"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Perosotan Anak"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Piano / Keyboard"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Rocking Horse"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Sepeda / Ride On"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:fontFamily="@font/raleway_medium"
                android:padding="10sp"
                android:text="Tenda Anak"
                android:textSize="17sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>