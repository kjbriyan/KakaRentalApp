<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Acitivity.PerpanjangActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/barAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_backsewa"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_back_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:text="Perpanjang Sewa"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />


            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/container_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/containerDetailSewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/img_HolderDetail"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        app:fillColor="@color/orange"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:pageColor="@color/white"
                        app:radius="6dp"
                        app:slideInterval="4000"
                        app:strokeColor="#FF777777"
                        app:strokeWidth="1dp"/>


                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/clouds"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_titleDetailSewa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="TextView"
                        android:textSize="20sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/greey" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/raleway_bold"
                        android:text="Detail"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/desc_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="TextView"
                        android:textSize="17sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Terakhir Sewa"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:editable="false"
                        android:id="@+id/dateDeatilActivity"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20sp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border"
                        android:padding="15sp"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" PILIH DURASI SEWA"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <RadioButton
                            android:id="@+id/rb_1hari"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="8dp"
                            android:text="Harian"
                            android:textAlignment="textStart"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/rb_1minggu"
                            app:layout_constraintHorizontal_bias="0.56"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <RadioButton
                            android:id="@+id/rb_1minggu"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"

                            android:text="Mingguan"
                            android:textAlignment="textStart"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toStartOf="@+id/rb_1bulan"
                            app:layout_constraintStart_toEndOf="@+id/rb_1hari"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RadioButton
                            android:id="@+id/rb_1bulan"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"

                            android:layout_marginEnd="8dp"
                            android:text="1 bulan"
                            android:textAlignment="textStart"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/rb_1minggu"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_hargaSewahari"
                            android:layout_width="0dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="8dp"
                            android:text="TextView"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="@+id/rb_1hari"
                            app:layout_constraintStart_toStartOf="@+id/rb_1hari"
                            app:layout_constraintTop_toBottomOf="@+id/rb_1hari" />

                        <TextView
                            android:id="@+id/tv_HargaSewaMinggu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_hargaSewahari"
                            app:layout_constraintEnd_toEndOf="@+id/rb_1minggu"
                            app:layout_constraintStart_toStartOf="@+id/rb_1minggu"
                            app:layout_constraintTop_toTopOf="@+id/tv_hargaSewahari"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/tv_HargaSewaBulan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_HargaSewaMinggu"
                            app:layout_constraintEnd_toEndOf="@+id/rb_1bulan"
                            app:layout_constraintStart_toStartOf="@+id/rb_1bulan"
                            app:layout_constraintTop_toTopOf="@+id/tv_HargaSewaMinggu" />

                        <EditText
                            android:id="@+id/et_jangkaWaktu"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/border"
                            android:inputType="number"
                            android:maxLength="1"
                            android:padding="15sp"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toTopOf="@+id/tv_totalSewa"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.53"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_HargaSewaMinggu"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/tv_totalSewa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Rp.0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_descJangka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="Hari"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/et_jangkaWaktu"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/et_jangkaWaktu"
                            app:layout_constraintTop_toTopOf="@+id/et_jangkaWaktu"
                            app:layout_constraintVertical_bias="0.514" />

                    </android.support.constraint.ConstraintLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tanggal Kembali"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_tanggalKembali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="Tanggal Kembali"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_add_cart"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/raleway_medium"
                        android:padding="20dp"
                        android:text="Perpanjang"
                        android:background="@color/orange"
                        android:textColor="@color/white" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>