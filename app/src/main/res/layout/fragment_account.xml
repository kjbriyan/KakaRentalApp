<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clouds">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_account_circle"
            android:backgroundTint="@color/birulangit" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Guest"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_LogOut"
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:layout_margin="13dp"
                android:text="Logout"
                android:textSize="17sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginStart="8dp"

        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">



        <TextView
            android:id="@+id/tv_Settingakun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/rightarrow"
            android:fontFamily="@font/raleway_medium"
            android:text="Pengaturan "
            android:textSize="17sp"
            android:padding="20dp"
            android:background="@drawable/grey_border_topbottom"/>


        <TextView
            android:id="@+id/tv_setatusPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/rightarrow"
            android:fontFamily="@font/raleway_medium"
            android:text="Setatus Pesanan"
            android:textSize="17sp"
            android:padding="20dp"
            android:background="@drawable/white_grey_border_bottom"/>

        <TextView
            android:id="@+id/tv_sedangdisewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/rightarrow"
            android:fontFamily="@font/raleway_medium"
            android:text="Sedang Disewa"
            android:textSize="17sp"
            android:padding="20dp"
            android:background="@drawable/white_grey_border_bottom"/>

        <TextView
            android:id="@+id/tv_pusatbantuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/rightarrow"
            android:fontFamily="@font/raleway_medium"
            android:text="Pusat Bantuan"
            android:textSize="17sp"
            android:padding="20dp"
            android:background="@drawable/white_grey_border_bottom"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>